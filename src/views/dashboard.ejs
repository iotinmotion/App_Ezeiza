<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Disponibilidad</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <!-- Header / Navegaci贸n -->
  <header class="main-header">
    <div class="container header-content">
      <div class="logo-area">
        <!-- Optimizaci贸n: width/height definidos para evitar saltos de carga -->
        <img src="/img/logo.jpg" alt="App Ezeiza" class="logo-circle" width="40" height="40">
        <span class="logo-text">Aeropuerto Ezeiza</span>
      </div>

      <nav class="main-nav">
        <a href="#" class="active">Dashboard</a>
        <a href="#">Mapas</a>
        <a href="#">Reportes</a>
      </nav>

      <div class="user-area">
        <button id="themeToggle" class="btn-icon"></button>
        <span class="username"><%= user.username %> (<%= user.role %>)</span>
        <img src="/img/logo.jpg" alt="User" class="user-photo">
        <a href="/logout" class="btn-logout">Salir</a>
      </div>
    </div>
  </header>

  <!-- Contenido Principal -->
  <main class="dashboard-content">
    <div class="container">
      <h2> Control de Carritos</h2>

      <div class="cards-grid" id="summaryGrid" data-app-id="<%= user.app %>">
        <% zones.forEach(zone => { %>
        <div class="card status-<%= zone.status %>" data-zone-name="<%= zone.name %>">
          <div class="card-header">
            <h3><%= zone.name %></h3>
          </div>
          <div class="card-body">
            <div class="metric">
              <span class="number"><%= zone.carts %></span>
              <span class="label"><%= zone.footer_card %></span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Tarjeta de Referencias -->
      <div class="card" style="margin-top: 20px;">
        <div class="card-body legend-content">
          <div class="legend-item">
            <span class="status-dot" style="background-color: #dc3545;"></span>
            <span>Critico (0-20%)</span>
          </div>
          <div class="legend-item">
            <span class="status-dot" style="background-color: #fd7e14;"></span>
            <span>Medio (20-80%)</span>
          </div>
          <div class="legend-item">
            <span class="status-dot" style="background-color: #28a745;"></span>
            <span>Normal (80-100%)</span>
          </div>
        </div>
      </div>

      <!-- Secci贸n Dividida: Detalles y Extra -->
      <div class="split-section">
        <!-- Tarjeta Izquierda: Cuadr铆cula de Sensores -->
        <div class="split-card">
          <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem;">
            <h2 style="margin: 0;">Nivel de Llenado por Sensor</h2>
            <span id="connectionStatus" class="offline-badge">Sin conexi贸n</span>
          </div>
          <div class="inner-card-bg">
            <div class="sensor-grid" id="sensorGrid">
              <% if (typeof cartDetails !== 'undefined' && cartDetails) { %>
                <% cartDetails.forEach(cart => { %>
                  <!-- Tooltip personalizado usando data-tooltip -->
                  <div class="sensor-square" data-tooltip="Carritos: <%= cart.cart_counter %>" style="background-color: <%= cart.color || '#999' %>;" data-sensor-zone="<%= cart.zone || 'Zona' %>">
                    <div style="font-size: 0.7em; margin-bottom: 2px;"><%= cart.zone || 'Zona' %></div>
                    <div><%= cart.percentage %>%</div>
                  </div>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Tarjeta Derecha: Espacio reservado -->
        <div class="split-card">
          <h2>Informaci贸n Adicional</h2>
          <div class="inner-card-bg">
            <div class="cards-grid" id="rawDataGrid">
              <% if (typeof rawData !== 'undefined' && rawData) { %>
                <% 
                  const colorPriority = { '#dc3545': 1, '#fd7e14': 2, '#28a745': 3 };
                  const getPriority = (c) => colorPriority[c] || 4;
                  rawData.sort((a, b) => getPriority(a.color) - getPriority(b.color));
                %>
                <% rawData.forEach(doc => { %>
                  <div class="card" style="border-left: 5px solid <%= doc.color || 'transparent' %>;">
                    <div class="card-body">
                      <% Object.keys(doc).forEach(key => { %>
                        <div style="font-size: 0.75em; overflow-wrap: break-word;"><strong><%= key %>:</strong> <%= doc[key] %></div>
                      <% }) %>
                    </div>
                  </div>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>

  <footer class="main-footer">
    <div class="container">
      <p>&copy; 2023 App Ezeiza. Soporte: soporte@iotim.com.ar</p>
    </div>
  </footer>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/script.js"></script>
</body>

</html>