<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Disponibilidad</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <!-- Header / Navegaci贸n -->
  <header class="main-header">
    <div class="container header-content">
      <div class="logo-area">
        <!-- Optimizaci贸n: width/height definidos para evitar saltos de carga -->
        <img src="/img/logo.jpg" alt="App Ezeiza" class="logo-circle" width="40" height="40">
        <span class="logo-text">Aeropuerto Ezeiza</span>
      </div>

      <nav class="main-nav">
        <a href="#" class="active">Dashboard</a>
        <a href="#">Mapas</a>
        <a href="#">Reportes</a>
      </nav>

      <div class="user-area">
        <button id="themeToggle" class="btn-icon"></button>
        <span class="username"><%= user.username %> (<%= user.role %>)</span>
        <img src="/img/logo.jpg" alt="User" class="user-photo">
        <a href="/logout" class="btn-logout">Salir</a>
      </div>
    </div>
  </header>

  <!-- Contenido Principal -->
  <main class="dashboard-content">
    <div class="container">
      <h2> Control de Carritos</h2>

      <div class="cards-grid" id="summaryGrid">
        <% zones.forEach(zone => { %>
        <div class="card status-<%= zone.status %>">
          <div class="card-header">
            <h3><%= zone.name %></h3>
          </div>
          <div class="card-body">
            <div class="metric">
              <span class="number"><%= zone.carts %></span>
              <span class="label"><%= zone.footer_card %></span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Tarjeta de Referencias -->
      <div class="card" style="margin-top: 20px;">
        <div class="card-body legend-content">
          <div class="legend-item">
            <span class="status-dot" style="background-color: #dc3545;"></span>
            <span>Critico (0-20%)</span>
          </div>
          <div class="legend-item">
            <span class="status-dot" style="background-color: #fd7e14;"></span>
            <span>Medio (20-80%)</span>
          </div>
          <div class="legend-item">
            <span class="status-dot" style="background-color: #28a745;"></span>
            <span>Normal (80-100%)</span>
          </div>
        </div>
      </div>

      <!-- Secci贸n Dividida: Detalles y Extra -->
      <div class="split-section">
        <!-- Tarjeta Izquierda: Cuadr铆cula de Sensores -->
        <div class="split-card">
          <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem;">
            <h3 style="margin: 0;">Nivel de Llenado por Sensor</h3>
            <span id="connectionStatus" class="offline-badge">Sin conexi贸n</span>
          </div>
          <div class="inner-card-bg">
            <div class="sensor-grid" id="sensorGrid">
              <% if (typeof cartDetails !== 'undefined' && cartDetails) { %>
                <% cartDetails.forEach(cart => { %>
                  <!-- Tooltip personalizado usando data-tooltip -->
                  <div class="sensor-square" data-tooltip="Carritos: <%= cart.cart_counter %>" style="background-color: <%= cart.color || '#999' %>;">
                    <div style="font-size: 0.7em; margin-bottom: 2px;"><%= cart.zone || 'Zona' %></div>
                    <div><%= cart.percentage %>%</div>
                  </div>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Tarjeta Derecha: Espacio reservado -->
        <div class="split-card">
          <h3>Informaci贸n Adicional</h3>
          <p>Contenido pendiente...</p>
        </div>
      </div>

      <div class="map-placeholder">
        <p>Vista de Mapa Interactiva (Placeholder)</p>
      </div>
    </div>
  </main>

  <footer class="main-footer">
    <div class="container">
      <p>&copy; 2023 App Ezeiza. Soporte: soporte@iotim.com.ar</p>
    </div>
  </footer>

  <script src="/js/script.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const statusBadge = document.getElementById('connectionStatus');
    const userApp = <%= user.app %>; // Obtenemos el ID de la app del usuario como n煤mero

    // Al conectar, solicitamos los datos
    socket.on('connect', () => {
        statusBadge.style.display = 'none';
        socket.emit('request_dashboard_data', userApp);
    });

    socket.on('disconnect', () => {
        statusBadge.style.display = 'inline-block';
    });

    // Recibir actualizaciones del servidor
    socket.on('dashboard_update', (data) => {
        // 1. Actualizar Tarjetas de Resumen (Zones)
        const summaryGrid = document.getElementById('summaryGrid');
        summaryGrid.innerHTML = '';
        data.zones.forEach(zone => {
            summaryGrid.innerHTML += `
            <div class="card status-${zone.status}">
                <div class="card-header"><h3>${zone.name}</h3></div>
                <div class="card-body">
                <div class="metric"><span class="number">${zone.carts}</span><span class="label">${zone.footer_card}</span></div>
                </div>
            </div>`;
        });

        // 2. Actualizar Cuadr铆cula de Sensores
        const grid = document.getElementById('sensorGrid');
        grid.innerHTML = ''; // Limpiar contenido actual
        data.cartDetails.forEach(cart => {
            const div = document.createElement('div');
            div.className = 'sensor-square fade-in'; // Agregar clase de animaci贸n
            div.style.backgroundColor = cart.color;
            div.setAttribute('data-tooltip', `Carritos: ${cart.cart_counter}`); // Tooltip CSS
            div.innerHTML = `<div style="font-size: 0.7em; margin-bottom: 2px;">${cart.zone || 'Zona'}</div>
                             <div>${cart.percentage}%</div>`;
            grid.appendChild(div);
        });
    });
  </script>
</body>

</html>